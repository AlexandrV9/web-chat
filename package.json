{
  "name": "web-chat",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "start": "npm run build && node ./server/index.cjs",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build",
    "clean": "rimraf node_modules/",
    "lint:ts": "npx eslint .  --fix",
    "lint:css": "npx stylelint \"**/*.{css,scss}\" --fix",
    "lint": "concurrently \"npm run lint:ts\" \"npm run lint:css\"",
    "test": "jest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "chai": "^5.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^11.2.2",
    "rimraf": "^6.0.1",
    "stylelint": "^16.13.2",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.5",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "sass": "^1.83.1",
    "ts-node": "^10.9.2"
  }
}
